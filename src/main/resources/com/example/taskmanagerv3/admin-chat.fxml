         </HBox>

         <!-- Message Input Area -->
         <VBox fx:id="messageInputArea" spacing="8" visible="false" managed="false"
               style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 10; -fx-border-color: #e9ecef; -fx-border-radius: 10; -fx-border-width: 1;">

